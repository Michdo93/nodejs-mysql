<%- include ../layouts/header.ejs %>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><%= title %></div>
            <div class="panel-body">
                <form class="form-horizontal" action="/customer/create" method="POST">
                    <div class="form-group">
                      <label class="control-label col-sm-2" for="name">E-Mail</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" name="email" id="email" placeholder="Enter email">
                      </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="location">Name</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="name" id="name" placeholder="Enter name">
                        </div>
                      </div>
                    <div class="form-group"> 
                      <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/customer"><button type="button" class="btn btn-default">Cancel</button></a>
                      </div>
                    </div>
                  </form>
            </div>
        </div>

    </div>
</div>

<%- include ../layouts/footer.ejs %>